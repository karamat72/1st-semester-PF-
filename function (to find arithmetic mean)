// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
void mean(int x ,int y,int z)
{
    int sum=x+y+z;
    float mean=sum/3;
    cout<<"sum of three number is "<<sum<<endl;
cout<<"Mean of three number is "<<mean;
    
}


int main() {
    int a,b,c;
    cout<<"ENTER THE THREE NUMBER"<<endl;
    cin>>a>>b>>c;
    mean(a,b,c);
  
    return 0;
}
